@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="~/Views/Shared/PartialsLayout/_Head.cshtml" />
</head>
<body class="d-flex flex-column min-vh-100">
    <partial name="~/Views/Shared/PartialsLayout/_Navbar.cshtml" />

    <main role="main" class="flex-grow-1 container py-4">
        @RenderBody()
    </main>

    <partial name="~/Views/Shared/PartialsLayout/_Footer.cshtml" />

    <partial name="~/Views/Shared/PartialsLayout/_Scripts.cshtml" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
