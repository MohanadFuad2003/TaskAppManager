@model TaskManagerApp.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}
<link rel="stylesheet" href="~/css/editProfile.css" asp-append-version="true" />

<div class="container">
    <div class="page-head d-flex align-items-center gap-2 mb-3">
        <i class="bi bi-key fs-4"></i>
        <h2 class="mb-0">Change Password</h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }

    <form asp-controller="EditProfile" asp-action="ChangePassword" method="post" class="card-surface p-4">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="CurrentPassword" class="form-label"></label>
            <input asp-for="CurrentPassword" class="form-control" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewPassword" class="form-label"></label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="ConfirmPassword" class="form-label"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-warning" type="submit">
                <i class="bi bi-shield-lock me-1"></i> Update Password
            </button>
            <a class="btn btn-outline-secondary" asp-controller="EditProfile" asp-action="EditProfile">
                <i class="bi bi-arrow-left-short me-1"></i> Back to Profile
            </a>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
